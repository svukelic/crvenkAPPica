<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pretraga:"
        android:id="@+id/textViewSearch"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/etSearch"
        android:layout_toStartOf="@+id/etSearch"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />

    <EditText
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="39dp"
        android:id="@+id/etSearch"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/textViewSearch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="PretraÅ¾i"
        android:id="@+id/buttonSearch"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/etSearch"
        android:layout_toRightOf="@+id/textViewSearch"
        android:layout_toEndOf="@+id/textViewSearch" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/buttonSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:id="@+id/view" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvSearch"
        android:layout_below="@+id/view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>